<Window x:Class="HomeVideojuegos.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeVideojuegos"
        mc:Ignorable="d"
        Title="Game Hub Login" Height="550" Width="918"
        Background="#FF151A2C"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>

        <Style x:Key="InputBaseStyle" TargetType="Control">
            <Setter Property="Background" Value="#FF2A3048"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#FF3A4058"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LoginTextBoxStyle" TargetType="{x:Type TextBox}" BasedOn="{StaticResource InputBaseStyle}">
            <Setter Property="CaretBrush" Value="#E0E0E0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF5A6078"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF00C0C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LoginPasswordBoxStyle" TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource InputBaseStyle}">
            <Setter Property="CaretBrush" Value="#E0E0E0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" 
                                          HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF5A6078"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF00C0C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToggleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#00C0C0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF00C0C0"/>
            <Setter Property="Foreground" Value="#151A2C"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,10,5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#FF30F0F0"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF00C0C0" ShadowDepth="0" BlurRadius="10" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#FF008080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ExitButtonStyle" TargetType="Button" BasedOn="{StaticResource LoginButtonStyle}">
            <Setter Property="Background" Value="#FF802020"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFB03030"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FFB03030" ShadowDepth="0" BlurRadius="10" Opacity="0.8"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF501010"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                CornerRadius="10,0,0,10" 
                Background="#FF1A2038"
                Margin="35,0,0,0"  VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Height="428">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" Color="#FF00C0C0" Opacity="0.8" BlurRadius="15"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Image Source="/HomeVideojuegos;component/Images/Logo.jpg" 
                       Stretch="UniformToFill"
                       Grid.RowSpan="4"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
                <Rectangle Grid.RowSpan="4" Fill="#B01A2038"/>

                

                <TextBlock Text="¡BIENVENIDO!"
                           Foreground="#E0E0E0"
                           FontSize="32"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Grid.Row="1"/>

                <TextBlock Text="Ingresa para acceder a tu catálogo de juegos."
                           Foreground="#C0C0C0"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Margin="20,5,20,20"
                           TextWrapping="Wrap"
                           Grid.Row="2"/>
            </Grid>
        </Border>

        <Border
                Background="#FF1A2038"
                CornerRadius="0,10,10,0" Padding="30"
                Margin="367,0,31,0"  VerticalAlignment="Center"
                Height="428" Grid.ColumnSpan="2">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" Color="#FF00C0C0" Opacity="0.8" BlurRadius="15"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="GAME HUB"
                           Foreground="#E0E0E0"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="ACCESO AL CATÁLOGO"
                           Foreground="#C0C0C0"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Usuario:"
                           Foreground="#C0C0C0"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TxtUser"
                         Height="30"
                         Style="{StaticResource LoginTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Contraseña:"
                           Foreground="#C0C0C0"
                           Margin="0,0,0,5"/>
                <Grid Height="30" Margin="0,0,0,10">
                    <PasswordBox x:Name="TxtPass"
                                 Style="{StaticResource LoginPasswordBoxStyle}"
                                 HorizontalAlignment="Stretch"
                                 PasswordChanged="TxtPass_PasswordChanged"/>

                    <TextBox x:Name="TxtVisiblePass"
                             Style="{StaticResource LoginTextBoxStyle}"
                             HorizontalAlignment="Stretch"
                             Visibility="Collapsed"
                             TextChanged="TxtVisiblePass_TextChanged"/>

                    <Button x:Name="TogglePassButton"
                            Content="👁️"
                            ToolTip="Mostrar/Ocultar Contraseña"
                            Width="30"
                            HorizontalAlignment="Right"
                            Style="{StaticResource ToggleButtonStyle}"
                            Click="TogglePasswordVisibility_Click"
                            Margin="0,0,5,0"/>
                </Grid>

                <TextBlock x:Name="TxtError"
                           Text=""
                           Foreground="#FFC05050"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,5,0,5"
                           Height="16"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="35" Margin="0,10,0,0">
                    <Button Content="LOGIN"
                            Style="{StaticResource LoginButtonStyle}"
                            Click="Login_Click"
                            Width="100"/>

                    <Button Content="NUEVO"
                            Style="{StaticResource LoginButtonStyle}"
                            Click="NewUser_Click"
                            Width="100"/>
                </StackPanel>

                <Button Content="SALIR "
                        Style="{StaticResource ExitButtonStyle}"
                        Click="Exit_Click"
                        Margin="0,15,0,0"
                        Width="220" Height="26"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>