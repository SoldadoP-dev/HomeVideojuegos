<Window x:Class="HomeVideojuegos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Hub" Height="750" Width="1150"
        Background="#0B0E14" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="GameCardStyle" TargetType="Border">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.04" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.04" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#10131C" BorderBrush="#1E2330" BorderThickness="0,0,1,0">
            <StackPanel Margin="25">
                <TextBlock Text="GAME HUB" Foreground="#00D1D1" FontSize="24" FontWeight="Black" Margin="0,0,0,50">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="15" Color="#00D1D1" Opacity="0.4" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>

                <Button Content="🏠 Explorar" Click="BtnExplorar_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="White" FontSize="16" Margin="0,10" Cursor="Hand" HorizontalAlignment="Left"/>
                <Button Content="📚 Biblioteca" Click="BtnBiblioteca_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="#9BA1AD" FontSize="16" Margin="0,10" Cursor="Hand" HorizontalAlignment="Left"/>
                <Button Content="🛒 Mi Carrito" Click="BtnCarrito_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="#9BA1AD" FontSize="16" Margin="0,10" Cursor="Hand" HorizontalAlignment="Left"/>
                <Button Content="❤ Lista Deseos" Click="BtnWishlist_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="#9BA1AD" FontSize="16" Margin="0,10" Cursor="Hand" HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="35,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel LastChildFill="False" Margin="0,0,0,30">
                <Border DockPanel.Dock="Left" Background="#1C212E" CornerRadius="12" Width="350" Padding="15,8">
                    <Grid>
                        <TextBlock Text="Buscar juegos..." Foreground="#5C6378" VerticalAlignment="Center" Margin="5,0" IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=TxtBusqueda}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBox x:Name="TxtBusqueda" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="14" VerticalAlignment="Center" TextChanged="TxtBusqueda_TextChanged"/>
                    </Grid>
                </Border>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="TxtBienvenida" Text="Hola, Usuario" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Button Content="Cerrar Sesión" Click="Logout_Click" Background="#2D1414" Foreground="#FF5555" FontWeight="Bold" Padding="15,8" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" Color="#FF5555" Opacity="0.3" ShadowDepth="0"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </DockPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                <UniformGrid x:Name="ContenedorJuegos" Columns="4" VerticalAlignment="Top"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>