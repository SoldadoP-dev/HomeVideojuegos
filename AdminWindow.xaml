<Window x:Class="HomeVideojuegos.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard - Game Hub" Height="750" Width="1200"
        MinWidth="1000" MinHeight="700"
        Background="#FF080A0F" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF151921"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF2A3048"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="ColumnHeaderHeight" Value="40"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Style.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#FF00C0C0"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10,0"/>
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FF1E2330"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Style.Resources>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF00C0C0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF111520" BorderBrush="#FF1E2330" BorderThickness="0,0,0,1">
            <DockPanel Margin="25,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🎮" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="GAME HUB" Foreground="White" FontSize="20" FontWeight="Black" VerticalAlignment="Center"/>
                    <TextBlock Text="ADMIN" Foreground="#FF00C0C0" FontSize="18" FontWeight="Light" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <Button DockPanel.Dock="Right" Content="CERRAR SESIÓN" Click="Logout_Click" Width="130" Height="35" Style="{StaticResource ModernButton}" Background="#FF3D1414"/>
            </DockPanel>
        </Border>

        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="20,10">
            <TabItem Header=" GESTIÓN DE CATÁLOGO ">
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="380"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#FF111520" CornerRadius="12" Padding="20">
                        <ScrollViewer VerticalScrollBarVisibility="Hidden">
                            <StackPanel>
                                <TextBlock Text="DATOS DEL JUEGO" Foreground="#FF00C0C0" FontWeight="Bold" Margin="0,0,0,20"/>
                                <TextBlock Text="TÍTULO" Foreground="#FF8E93A1" FontSize="11" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtTitulo" Margin="0,0,0,15" Height="35"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                        <TextBlock Text="PRECIO (€)" Foreground="#FF8E93A1" FontSize="11" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtPrecio" Height="35"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                        <TextBlock Text="AÑO" Foreground="#FF8E93A1" FontSize="11" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtAnio" Height="35"/>
                                    </StackPanel>
                                </Grid>
                                <TextBlock Text="ESTUDIO" Foreground="#FF8E93A1" FontSize="11" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtFabricante" Margin="0,0,0,15" Height="35"/>
                                <TextBlock Text="DESCRIPCIÓN" Foreground="#FF8E93A1" FontSize="11" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtDescripcion" Margin="0,0,0,15" Height="60" TextWrapping="Wrap"/>
                                <Button Content="SUBIR PORTADA" Click="BtnSeleccionarImagen_Click" Height="30" Margin="0,0,0,10" Background="#FF2A3048" Style="{StaticResource ModernButton}"/>
                                <Border Height="100" Background="#FF080A0F" CornerRadius="8" Margin="0,0,0,15">
                                    <Image x:Name="ImgPreview" Stretch="Uniform" Margin="5"/>
                                </Border>
                                <UniformGrid Columns="2" Height="40">
                                    <Button Content="GUARDAR / CREAR" Click="BtnGuardar_Click" Style="{StaticResource ModernButton}" Margin="0,0,5,0"/>
                                    <Button Content="NUEVO JUEGO" Click="BtnLimpiar_Click" Background="#FF2A3048" Style="{StaticResource ModernButton}" Margin="5,0,0,0"/>
                                </UniformGrid>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                    <Border Grid.Column="1" Margin="20,0,0,0" Background="#FF111520" CornerRadius="12" Padding="5">
                        <DataGrid x:Name="DgJuegos" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="DgJuegos_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                <DataGridTextColumn Header="TÍTULO" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="PRECIO" Binding="{Binding Price}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header=" GESTIÓN DE USUARIOS ">
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="380"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#FF111520" CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="DATOS DE USUARIO" Foreground="#FF00C0C0" FontWeight="Bold" Margin="0,0,0,20"/>

                            <TextBlock Text="NOMBRE DE USUARIO" Foreground="#FF8E93A1" FontSize="11" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtUserNombre" Margin="0,0,0,15" Height="35"/>

                            <TextBlock Text="EMAIL" Foreground="#FF8E93A1" FontSize="11" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtUserEmail" Margin="0,0,0,15" Height="35"/>

                            <TextBlock Text="CONTRASEÑA" Foreground="#FF8E93A1" FontSize="11" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="TxtUserPass" Margin="0,0,0,15" Height="35" Background="#FF151921" Foreground="White" BorderBrush="#FF2A3048" Padding="8,5"/>

                            <TextBlock Text="ROL" Foreground="#FF8E93A1" FontSize="11" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CbUserRol" Margin="0,0,0,15" Height="35">
                                <ComboBoxItem Content="Nominal"/>
                                <ComboBoxItem Content="Admin"/>
                            </ComboBox>

                            <TextBlock Text="ESTADO" Foreground="#FF8E93A1" FontSize="11" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CbUserEstado" Margin="0,0,0,20" Height="35">
                                <ComboBoxItem Content="Activo"/>
                                <ComboBoxItem Content="Baneado"/>
                            </ComboBox>

                            <UniformGrid Columns="2" Height="40">
                                <Button Content="GUARDAR / CREAR" Click="BtnActualizarUsuario_Click" Style="{StaticResource ModernButton}" Margin="0,0,5,0"/>
                                <Button Content="LIMPIAR" Click="BtnLimpiarUser_Click" Background="#FF2A3048" Style="{StaticResource ModernButton}" Margin="5,0,0,0"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Margin="20,0,0,0" Background="#FF111520" CornerRadius="12" Padding="5">
                        <DataGrid x:Name="DgUsuarios" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="DgUsuarios_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="USUARIO" Binding="{Binding NombreUsuario}" Width="*"/>
                                <DataGridTextColumn Header="EMAIL" Binding="{Binding email}" Width="*"/>
                                <DataGridTextColumn Header="ROL" Binding="{Binding rol}" Width="100"/>
                                <DataGridTextColumn Header="ESTADO" Binding="{Binding estado}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>