<Window x:Class="HomeVideojuegos.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mi Carrito" Height="550" Width="650"
        Background="#0B0E14" WindowStartupLocation="CenterOwner"
        AllowsTransparency="True" WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border BorderBrush="#1E2330" BorderThickness="1" CornerRadius="15" Background="#0B0E14">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel LastChildFill="False" Margin="0,0,0,20">
                <TextBlock Text="TU CARRITO" Foreground="#00D1D1" FontSize="26" FontWeight="Black">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="10" Color="#00D1D1" Opacity="0.3" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <Button Content="✕" DockPanel.Dock="Right" Click="Volver_Click" 
                        Background="Transparent" Foreground="#9BA1AD" BorderThickness="0" 
                        FontSize="18" Cursor="Hand"/>
            </DockPanel>

            <ListBox x:Name="lbCarrito" Grid.Row="1" Background="Transparent" BorderThickness="0" 
                     ScrollViewer.VerticalScrollBarVisibility="Auto" d:ItemsSource="{d:SampleData ItemCount=3}"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#161A24" CornerRadius="12" Margin="0,0,0,12" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border CornerRadius="8" ClipToBounds="True" Width="70" Height="45" VerticalAlignment="Center">
                                    <Image Source="{Binding imagen}" Stretch="UniformToFill"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                                    <TextBlock Text="{Binding titulo}" Foreground="White" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="Digital Edition" Foreground="#9BA1AD" FontSize="12"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="{Binding precio, StringFormat={}{0:N2} €}" 
                                           Foreground="#00D1D1" FontSize="18" FontWeight="Bold" 
                                           VerticalAlignment="Center" Margin="0,0,20,0"/>

                                <Button Grid.Column="3" Content="" FontFamily="Segoe MDL2 Assets" 
                                        Tag="{Binding id_juego}" Click="EliminarDelCarrito_Click"
                                        Background="Transparent" Foreground="#FF5555" BorderThickness="0" 
                                        FontSize="16" Cursor="Hand" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Border Grid.Row="2" Background="#111520" CornerRadius="12" Padding="20" Margin="0,10,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="TOTAL" Foreground="#9BA1AD" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock x:Name="lblTotal" Text="0.00 €" Foreground="White" FontSize="24" FontWeight="Black" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Volver" Click="Volver_Click" Margin="0,0,15,0"
                                Background="Transparent" Foreground="White" Width="80" Height="40" Cursor="Hand"/>
                        <Button Content="PAGAR AHORA" Click="Pagar_Click" 
                                Background="#00D1D1" Foreground="#0B0E14" FontWeight="Bold" 
                                Padding="25,0" Height="45" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>