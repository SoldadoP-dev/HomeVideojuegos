<Window x:Class="HomeVideojuegos.DialogoPersonalizado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notificación" Height="200" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Topmost="True">

    <Border Background="#FF1A2038" CornerRadius="15" BorderBrush="#00C0C0" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Color="#00C0C0" Opacity="0.4" ShadowDepth="0"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TxtMensaje" Text="Mensaje de prueba" 
                       Foreground="White" FontSize="16" TextWrapping="Wrap" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>

            <Button Grid.Row="1" Content="ACEPTAR" Width="120" Height="35"
                    Background="#00C0C0" Foreground="#151A2C" FontWeight="Bold"
                    Cursor="Hand" Click="Aceptar_Click" Margin="0,10,0,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>