<Window x:Class="HomeVideojuegos.DetalleJuegoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle del Juego" Height="600" Width="900"
        Background="#FF080A0F" WindowStartupLocation="CenterOwner"
        AllowsTransparency="True" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border CornerRadius="15" Background="#FF111520" BorderBrush="#FF00C0C0" BorderThickness="1">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="10" Background="#FF080A0F" Height="450" VerticalAlignment="Center">
                <Image x:Name="ImgDetalle" Stretch="Uniform" Margin="10"/>
            </Border>

            <StackPanel Grid.Column="1" Margin="30,0,0,0" VerticalAlignment="Center">
                <Button Content="✕" HorizontalAlignment="Right" Background="Transparent" Foreground="Gray" 
                        BorderThickness="0" FontSize="20" Click="BtnCerrar_Click" Cursor="Hand"/>

                <TextBlock x:Name="LblTitulo" Text="Título del Juego" Foreground="White" FontSize="32" FontWeight="Bold" TextWrapping="Wrap"/>
                <TextBlock x:Name="LblFabricante" Text="Compañía" Foreground="#FF00C0C0" FontSize="18" Margin="0,5,0,20"/>

                <TextBlock Text="DESCRIPCIÓN" Foreground="Gray" FontSize="12" FontWeight="Bold"/>
                <TextBlock x:Name="LblDescripcion" Text="Descripción aquí..." Foreground="#FFBCC2D1" 
                           FontSize="14" Margin="0,5,0,25" TextWrapping="Wrap" Height="150"/>

                <TextBlock x:Name="LblPrecio" Text="0.00 €" Foreground="White" FontSize="36" FontWeight="Black" Margin="0,0,0,30"/>

                <StackPanel Orientation="Vertical">
                    <Button Content="COMPRAR AHORA" Height="45" Margin="0,0,0,10" 
                            Background="#FF00C0C0" Foreground="White" FontWeight="Bold" Click="BtnComprar_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="🛒 AL CARRITO" Height="40" Margin="0,0,5,0" 
                                Background="#FF2A3048" Foreground="White" Click="BtnCarrito_Click"/>
                        <Button Grid.Column="1" Content="❤️ WISHLIST" Height="40" Margin="5,0,0,0" 
                                Background="#FF2A3048" Foreground="White" Click="BtnWishlist_Click"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>